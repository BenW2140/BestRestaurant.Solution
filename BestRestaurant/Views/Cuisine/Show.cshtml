@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model BestRestaurant.Models.Cuisine;

<h2>Cuisine Details:</h2>
<hr />
<h3>Cuisine Name: @Html.DisplayFor(model => model.Name)</h3>
<h4>Region: @Html.DisplayFor(model => model.Region)</h4>

<h4>Restaurants:</h4>
<ul>
@if(Model.Restaurant.Count == 0)
{
  <p>No Restaurants Found :(</p>
}

@foreach (Restaurant restaurant in @Model.Restaurant)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Show", "Restaurant", new { id = restaurant.RestaurantId })</li>
}
</ul>

<p>@Html.ActionLink("Back to Cuisines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>